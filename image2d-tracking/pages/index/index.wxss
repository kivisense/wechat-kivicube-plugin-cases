.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.bg,
.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -10;
}
.mask {
  background-color: rgba(36, 36, 36, 0.64);
}

.text-box {
  display: inline-flex;
  flex-direction: column;
  width: 66.4vw;
  margin-bottom: 8.53vw;
}

.image {
  width: 13vw;
  height: 3.2vw;
  margin-bottom: 4.8vw;
}

.text {
  width: 48vw;
  height: 20vw;
}

.button {
  position: relative;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 75vw;
  height: 24vw;
  font-size: 4vw;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: #ffffff;
  line-height: 5.6vw;
  letter-spacing: 1px;
  margin-bottom: 1.87vw;
}

.button image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.link {
  font-size: 4vw;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #ffffff;
  line-height: 5.6vw;
  margin-bottom: 20.27vw;
  border-bottom: 1px solid #ffffff;
}

.shadow {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: -2;
}
