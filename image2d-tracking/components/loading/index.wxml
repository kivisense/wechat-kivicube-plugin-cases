<view class="loading">
  <view class="box">
    <progress-bar class="progress-bar" style="mix-blend-mode: lighten;" progress="{{percent}}"></progress-bar>
    <view class="progress-bar">
      <view class="progress" style="transform: translate({{posX}}vw, {{posY}}vw)">
        <image class="box-image" src="../../assets/progress.png"></image>
        <text class="progress-text">{{percent}}%</text>
      </view>
      <image class="loading-image" src="/assets/loading.png"></image>
    </view>
    <image class="box-image" src="/assets/loading_bg.png"></image>
    <view class="text">Loading...</view>
  </view>
</view>