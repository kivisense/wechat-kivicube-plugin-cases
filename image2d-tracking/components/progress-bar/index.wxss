.circle {
  position: absolute;
  border-radius: 50%;
  background-color: #ffffff;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sm {
  width: calc(100% - 5px);
  height: calc(100% - 5px);
}

.left,
.right {
  width: 50%;
  height: 100%;
  overflow: hidden;
  position: relative;
  float: left;
  background-color: #ffffff;
}
.left {
  border-radius: 10000px 0 0 10000px;
}
.right {
  border-radius: 0 10000px 10000px 0;
}
.ring {
  content: "";
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  background-color: #000000;
}
.right .ring {
  transform-origin: left center;
}
.left .ring {
  transform-origin: right center;
}
